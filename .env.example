# Agent Hub - Environment Variables
# Copy this file to .env and fill in your values

# Database (optional - for future features)
DATABASE_URL=mysql://user:password@localhost:3306/agenthub

# Daemon Authentication
# Generate a secure token for daemon communication
# The daemon will auto-generate one if not provided
DAEMON_AUTH_TOKEN=

# Gemini API (optional - for direct API mode)
GEMINI_API_KEY=

# Quota Service (optional)
QUOTA_SERVICE_URL=http://localhost:3100
QUOTA_API_KEY=

# GitHub (optional - for issue integration)
GITHUB_TOKEN=
